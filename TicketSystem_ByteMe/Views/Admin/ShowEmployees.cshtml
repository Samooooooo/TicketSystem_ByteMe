@model List<Employee>

<h4>Employee List</h4>

<div class="container">
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Employee ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Job Title</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var employee in Model)
      {
        <tr>
          <td><a asp-action="EmployeeDetail" asp-route-id="@employee.EmployeeID">@employee.EmployeeID</a></td>
          <td><a asp-action="EmployeeDetail" asp-route-id="@employee.EmployeeID">@employee.FirstName</a></td>
          <td><a asp-action="EmployeeDetail" asp-route-id="@employee.EmployeeID">@employee.LastName</a></td>
          <td><a asp-action="EmployeeDetail" asp-route-id="@employee.EmployeeID">@employee.JobTitle</a></td>
          <td>
            <a class="btn btn-outline-dark" asp-action="EditEmployee" asp-route-id="@employee.EmployeeID">Edit</a>
          </td>
        </tr>
      }
    </tbody>
  </table>
</div>

<a asp-action="NewEmployee" class="btn btn-primary">Add New Employee</a>