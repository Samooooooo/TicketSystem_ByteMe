@model List<Employee>

<h1>Employee List</h1>

<div class="container">
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Employee ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Job Title</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var employee in Model)
      {
        <tr>
          <td>@employee.EmployeeID</td>
          <td>@employee.FirstName</td>
          <td>@employee.LastName</td>
          <td>@employee.JobTitle</td>
        </tr>
      }
    </tbody>
  </table>
</div>

<a asp-action="AddEmployee" class="btn btn-primary">Add New Employee</a>