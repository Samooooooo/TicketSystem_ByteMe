@model Project


<h1>Add New Project</h1>

<div class="container m-5">
  <form asp-action="AddProject" method="post">
    <div>
      <label>Title:</label>
      <input asp-for="Title" style="left:151px ; position:fixed " />
      <span asp-validation-for="Title"></span>
    </div>
    <div>
      <label>Description:</label>
      <input asp-for="Description" />
      <span asp-validation-for="Description"></span>
    </div>
    <div>
      <label>Start: <span style="margin-left:49px;">@DateTime.Now</span> </label>
      <input type="hidden" asp-for="Start" value="@DateTime.Now" />
      <span asp-validation-for="Start"></span>
    </div>
    <button type="submit">Add Project</button>
  </form>
</div>
