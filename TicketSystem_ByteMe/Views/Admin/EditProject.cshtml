@model Project


<h1>Edit Project</h1>

<div class="container m-5">
  <form asp-action="EditProject" method="post">
    <input type="hidden" asp-for="ProjectID" />
    <div>
      <label>Title:</label>
      <input asp-for="Title" style="left:151px ; position:fixed " />
      <span asp-validation-for="Title"></span>
    </div>
    <div>
      <label>Description:</label>
      <input asp-for="Description" />
      <span asp-validation-for="Description"></span>
    </div>
    <div>
      <label>Start: <span style="margin-left:49px;">@Model.Start</span> </label>
      <input type="hidden" asp-for="Start" value="@Model.Start" />
    </div>
    <button type="submit">Edit Project</button>
  </form>
</div>
